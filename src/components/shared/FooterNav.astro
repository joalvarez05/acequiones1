---
export interface Props {
  title: string;
  navItems: {
    item: string;
    itemText: string;
    itemLink: string;
  }[];
}

const { title, navItems } = Astro.props;
---

<nav class="space-y-6">
  <h2 class="capitalze font-semibold text-heading-1 text-xl text-center">
    {title}
  </h2>
  <ul class="space-y-3 font-medium md:text-lg text-heading-3">
    {
      navItems.map((navItem) => (
        <li>
          <a href={navItem.itemLink} class="transition hover:text-primary">
            <span class="font-bold">{navItem.item}</span>:
            {navItem.itemText}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
