---
import Container from "@/components/shared/Container.astro";
import "flowbite";

interface AccordionItem {
  title: string;
  content: string;
}

interface Props {
  items: AccordionItem[];
}

const { items } = Astro.props;
---

<Container className={"mb-8"}>
  <h4
    class="text-heading-1 text-center font-semibold text-2xl sm:text-3xl md:text-4xl"
  >
    Preguntas Frecuentes (FAQ)
  </h4>
</Container>

<Container>
  <div id="accordion-collapse" data-accordion="collapse">
    {
      items.map((item, index) => (
        <div
          class="hover:border-[#00BFFF]/50 
  hover:shadow-[0_0_15px_rgba(190,184,56,0.5)] 
  dark:hover:border-primary/50 
  dark:hover:shadow-[0_0_15px_rgba(190,184,56,0.5)] rounded-lg"
        >
          <h5 id={`accordion-open-heading-${index}`}>
            <button
              type="button"
              class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-b-0 border-gray-200 rounded-t-xl focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3"
              data-accordion-target={`#accordion-open-body-${index}`}
              aria-expanded="false"
              aria-controls={`accordion-open-body-${index}`}
            >
              <span class="flex items-center text-sm sm:text-base md:text-base lg:text-lg xl:text-xl ">
                <span class="mr-2 text-2xl">{index + 1}.</span>
                {item.title}
              </span>
              <svg
                data-accordion-icon
                class="w-3 h-3 rotate-180 shrink-0"
                aria-hidden="true"
                fill="none"
                viewBox="0 0 10 6"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5 5 1 1 5"
                />
              </svg>
            </button>
          </h5>
          <div
            id={`accordion-open-body-${index}`}
            class="hidden "
            aria-labelledby={`accordion-open-heading-${index}`}
          >
            <div class="p-5 border border-b-0 border-gray-200 dark:border-gray-700 dark:bg-gray-900 ">
              <p class="mb-2 text-gray-500 dark:text-gray-400 text-base lg:text-lg md:text-base sm:text-base">
                {item.content}
              </p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Container>
